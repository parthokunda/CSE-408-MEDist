<%- include('./style.ejs') %>
<!DOCTYPE html>

<html>
  <head>
    <body>
      <!-- main div -->
      <div class="box">
        <div class="group">
          <div class="overlap">
            <div class="rectangle"></div>
            <div class="text-wrapper">Meet After <%= meetAfter %> Days</div>
            <div class="med-header">
              <div class="navbar">
                <div class="div">Name</div>
                <div class="text-wrapper-2">Dosage</div>
                <div class="text-wrapper-3">When</div>
                <div class="text-wrapper-4">Duration</div>
              </div>

              <hr style="margin-top: 25px" />
            </div>

            <div class="advices">
              <% obj.advices.forEach((advice)=> { %>
              <div class="advice-header"><%= advice %></div>
              <% }) %>
            </div>

            <div class="medicines">
              <div class="med-list">
                <% if(obj.Medicines.length > 0) {
                obj.Medicines.forEach((brandInfo) => { %>

                <div class="med-entry">
                  <div class="medBefAft"><%= brandInfo.when %></div>
                  <div class="medDuration"><%= brandInfo.duration %></div>
                  <div class="medName">
                    <img
                      class="medImage"
                      src="<%"
                      ="brandInfo.DosageForm.imag_url"
                      %
                    />
                    /> <%= brandInfo.Brand.name %> <%= brandInfo.Brand.strength
                    %>
                  </div>
                  <div class="medWhen"><%= brandInfo.dosage %></div>
                </div>

                <% }) } %>
              </div>

              <div class="prescription-header">
                <div class="overlap-group">
                  <div class="doctor-info">
                    <div class="doctorName">
                      Dr. <%= obj.Header.DoctorPortionInfo.DoctorInfo.name %>
                    </div>
                    <div class="doctor-additional">
                      <div class="contact">
                        Contact: <%=
                        obj.Header.DoctorPortionInfo.DoctorInfo.phone %>
                      </div>
                      <div class="degree">
                        <%=
                        obj.Header.DoctorPortionInfo.DoctorInfo.degrees.join(",
                        ") %>
                      </div>
                      <div class="department">
                        <%= obj.Header.DoctorPortionInfo.Specialization.name %>
                      </div>
                    </div>
                  </div>
                  <div class="prescription-info">
                    <div class="prescriptionDate">
                      Date: <%= new
                      Date(obj.Header.AppointmentPortionInfo.time).toLocaleDateString()
                      %>
                    </div>
                  </div>
                </div>
              </div>
              <img
                class="rxImg"
                src="https://www.freeiconspng.com/thumbs/rx-icon/rx-icon-6.png"
              />
            </div>

            <div class="leftBar">
              <div class="history">
                <div class="leftBarHeadings">Past History</div>
                <div class="leftBarEntries">XYZ</div>
                <div class="leftBarEntries">ABC</div>
                <div class="leftBarEntries">ABC</div>
              </div>
              <div class="Diagnosis">
                <div class="leftBarHeadings">Diagnosis:</div>
                <div class="leftBarEntries">XYZ</div>
                <div class="leftBarEntries">XYZ</div>
                <div class="leftBarEntries">XYZ</div>
              </div>
              <div class="symptom">
                <div class="leftBarHeadings">Symptoms:</div>
                <div class="symptomEntry">C</div>
                <div class="symptomEntry">A</div>
                <div class="symptomEntry">B</div>
              </div>
            </div>

            <div class="presc-patient-info">
              <div class="patientDiv">
                <div class="age">
                  Age: <%= obj.Header.PatientPortionInfo.age %>
                </div>
                <div class="height">
                  Height: <%= obj.Header.PatientPortionInfo.height.feet %>’ <%=
                  obj.Header.PatientPortionInfo.height.inches %>’’
                </div>
                <div class="weight">
                  Weight: <%= obj.Header.PatientPortionInfo.weight %> kgs
                </div>
                <div class="name">
                  Name: <%= obj.Header.PatientPortionInfo.name %>
                </div>
                <div class="blood">
                  Blood: <%= obj.Header.PatientPortionInfo.bloodGroup %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end of main div -->
    </body>
  </head>
</html>
